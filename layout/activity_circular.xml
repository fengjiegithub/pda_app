<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CircularActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/my3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Circulars and Notices"
                android:id="@+id/text3"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="1. Communication Skills and Aptitude Reexamination for Failed Students"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text3"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="As a special case, a reexamination is being conducted for failed students in the subject Communication Skills and Aptitude. The list is notified with this circular. Students who have failed in the communication/ aptitude subject and if his / her number does not appear in this list, you may approach the Controller of Examination with a request application to include his / her number in the list."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text4" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Download Attachment"
                android:textColor="#E84D65F0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text5" />


            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="2. The Proceedings of the BOG (TEQIPIII) meeting 16th July, 2018 at 11:00 am"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text6" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="The Proceedings of the Board of Governors (TEQIPIII) meeting was held on 16th July, 2018 at 11:00 am, at Poojya Doddappa Appa
 College of Engineering, Kalaburagi"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text7" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Download Attachment"
                android:textColor="#E84D65F0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text9"                app:layout_constraintLeft_toLeftOf="parent"
                android:text="3.  MOU between AICTE and NIELIT"
                android:id="@+id/text10"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="MOU between AICTE and NIELIT
(National Institute of Electronics and Information Technology,
 which is under Ministry of Electronics and Information Technology).

NIELT estblishes 'Training centres' at AICTE recognized colleges.
PDA College of Engg. is also selected for NIELT training center.

Students are informed to undergo such training programmes at NIELIT Centre.

-PRINCIPA"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text10" />







        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>