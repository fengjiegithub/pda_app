<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/my1"
        app:cardUseCompatPadding="true"

        app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card"
            android:layout_margin="10dp"
            android:background="#048EF3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="30dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
app:cardUseCompatPadding="true"        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/my1">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Examination Notifications:
EVEN Semester Examination"
        android:id="@+id/tex13"
        android:textSize="15sp"
        android:gravity="center"
android:layout_margin="20dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#000"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex14"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="#E8EF6C00"
        app:layout_constraintTop_toBottomOf="@+id/tex13"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Revised Detail Time Table For M.Tech II Sem Theory Examinations For MAY/JAN 2019I  and II Sem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex15"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#0A8CF3"
        app:layout_constraintTop_toBottomOf="@id/tex14"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Revised Detail Time Table For B.E II Sem Theory Examinations For MAYJAN 2019"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex16"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#E8EF6C00"
        app:layout_constraintTop_toBottomOf="@id/tex15"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Notice M.Tech. ll SEM. Students Regular and re-registered Examination (May/June 2019 )"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex17"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textColor="#0A8CF3"
        app:layout_constraintTop_toBottomOf="@id/tex16"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Detail Time Table For M.Tech ll SEm Theory Examinations
 For MAY/JAN 2019"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex18"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#E8EF6C00"
        app:layout_constraintTop_toBottomOf="@id/tex17"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Detail Time Table For B.E Theory Examinations For MAY/
JAN 2019"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tex19"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textColor="#0A8CF3"
        app:layout_constraintTop_toBottomOf="@id/tex18"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Notice Collect their Hall Tickets   Examinations May/Jan
2019"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>