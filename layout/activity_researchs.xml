<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResearchsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/my1">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#048EF3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Research Centers"
                android:textSize="23dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/my2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/my1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="#f1f1f1"
            android:weightSum="2">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="Name of the Department"
                        android:textColor="#000"
                        android:textStyle="bold" />



                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Civil Engineering	" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Electronics and Communication Engineering	" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Mechanical Engineering" />




                </TableRow>




                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Industrial and Production Engineering" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Electrical and Electronics Engineering" />



                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Computer Science and Engineering	" />



                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Instrumentation Technology" />


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Information Technology" />




                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Automobile Engineering" />


                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Ceramic and Cement Technology" />



                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Mathematics" />



                </TableRow>
                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="Chemistry" />



                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>