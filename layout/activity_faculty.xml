<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnderActivity">
 <android.support.constraint.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <Button
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:id="@+id/civil"
      app:layout_constraintTop_toTopOf="parent"
      android:text="Civil"/>

  <Button
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:id="@+id/mechanical"
      android:text="Mechanical"
      app:layout_constraintTop_toBottomOf="@+id/civil"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent"
      android:id="@+id/electrical" android:text="Electrical and Electronics" app:layout_constraintTop_toBottomOf="@+id/mechanical"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent"
      android:id="@+id/electronics" android:text="Electronics and Communication" app:layout_constraintTop_toBottomOf="@+id/electrical"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/industrial" android:text="Industrial and Production" app:layout_constraintTop_toBottomOf="@+id/electronics"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/instrumentation" android:text="Electronics and Instrumentation" app:layout_constraintTop_toBottomOf="@+id/industrial"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/architecture" android:text="Architecture" app:layout_constraintTop_toBottomOf="@+id/instrumentation"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/ceramic" android:text="Ceramic and Cement" app:layout_constraintTop_toBottomOf="@+id/architecture"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/information" android:text="Information Science" app:layout_constraintTop_toBottomOf="@+id/ceramic"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/computer" android:text="Computer Science" app:layout_constraintTop_toBottomOf="@+id/information"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/automobile" android:text="Automobile" app:layout_constraintTop_toBottomOf="@+id/computer"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/physics" android:text="Physics" app:layout_constraintTop_toBottomOf="@+id/automobile"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/chemistry" android:text="Chemistry" app:layout_constraintTop_toBottomOf="@+id/physics"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/mathematics" android:text="Mathematics" app:layout_constraintTop_toBottomOf="@+id/chemistry"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/humanity" android:text="Humanity" app:layout_constraintTop_toBottomOf="@+id/mathematics"/>


  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/power" app:layout_constraintTop_toBottomOf="@+id/humanity" android:text="Power Electronics"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/thermal" android:text="Thermal Power Engineering" app:layout_constraintTop_toBottomOf="@+id/power"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/environmental" android:text="Environmental Engineering" app:layout_constraintTop_toBottomOf="@+id/thermal"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/structural" android:text="Structural Engineering" app:layout_constraintTop_toBottomOf="@+id/environmental"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/production" android:text="Production Engineering" app:layout_constraintTop_toBottomOf="@+id/structural"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/science" android:text="Computer Science and Engineering" app:layout_constraintTop_toBottomOf="@+id/production"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/biomedical" android:text="Biomedical Electronics and Industrial Instrumentation" app:layout_constraintTop_toBottomOf="@+id/science"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/communication" android:text="Communiicatin System" app:layout_constraintTop_toBottomOf="@+id/biomedical"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/networks" android:text="Computer Networks" app:layout_constraintTop_toBottomOf="@+id/communication"/>

  <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/materials" android:text="Materials Science and Technology" app:layout_constraintTop_toBottomOf="@+id/networks"/>

 </android.support.constraint.ConstraintLayout>
</ScrollView>