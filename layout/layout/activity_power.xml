<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE03A9F4"
    tools:context=".PowerActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:id="@+id/card"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0686EE">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Power Electronics"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/civil"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/card1"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/card">
        <android.support.constraint.ConstraintLayout
            android:layout_width="320dp"
            android:layout_height="80dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/image"
                android:src="@drawable/msaspaali"
                android:layout_marginLeft="10dp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:text="Dr.M.S.Aspalli"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/image"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desi"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"
                android:text="Professor"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:layout_constraintLeft_toRightOf="@+id/image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mob"
                android:text="8566778878"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/desi"
                app:layout_constraintLeft_toRightOf="@+id/image"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="35dp"
                app:layout_constraintBottom_toBottomOf="parent"/>




        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/card2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card1">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/image1"
                android:src="@drawable/manishrathi"
                android:layout_marginLeft="10dp"
                app:civ_border_color="@color/colorPrimaryDark"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name1"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"
                android:text="Sri.Manish Rathi"
                app:layout_constraintLeft_toRightOf="@+id/image1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/desi1"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"
                android:text="Assoc.Professor"
                app:layout_constraintTop_toBottomOf="@+id/name1"
                app:layout_constraintLeft_toRightOf="@+id/image1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mob1"
                android:text="8566778878"
                android:textSize="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@+id/desi1"
                app:layout_constraintLeft_toRightOf="@+id/image1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="35dp"/>






        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>