<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/allinone"
    android:layout_height="match_parent"
    tools:context=".DepartmentActivity">
    <Button
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:background="#C159DAF1"
        android:textAlignment="center"
        android:text="Under Graduate Programme"
        app:layout_constraintBottom_toTopOf="@+id/research"
        android:layout_margin="10dp"
        android:id="@+id/post"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:elevation="10dp"
        android:background="#BC03D2E5"
        android:text="Post Graduate Programme"
        android:layout_margin="10dp"
        android:id="@+id/research"
        app:layout_constraintTop_toBottomOf="@+id/post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>