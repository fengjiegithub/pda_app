<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">
    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="About College" app:layout_constraintTop_toTopOf="parent" android:id="@+id/aboutcollege"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="About Society" android:id="@+id/society" app:layout_constraintTop_toBottomOf="@+id/aboutcollege"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Vission and Mission" android:id="@+id/vission" app:layout_constraintTop_toBottomOf="@+id/society"/>

</android.support.constraint.ConstraintLayout>