<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MandatoryActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/my3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Mandatory Disclosures"
                android:id="@+id/text3"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="                  Mandatory Disclosures Format

                  AICTE Extension Approval 2018-19

                  NIRF-2019

                  Calender of evetns 2018-19

                  Pay Bill of Aided Department Faculty and Staff

                  Scholarship Renewal 2017-2018

                  Scholarship Fresh 2017-2018

                  AISHE-DCF-II_P D A College of Engineering, 2018-19"
                android:textColor="#F71B39EB"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text=" Audit Reports"
                android:id="@+id/text7"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="                  Audit Report 2016-17

                  Audit Report 2017-18

                  Audit Report 2014-15

                  Audit Report 2015-16"
                android:textColor="#F71B39EB"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text7" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>



        </android.support.constraint.ConstraintLayout>