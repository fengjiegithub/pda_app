<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/allinone"
    android:layout_height="match_parent"
    tools:context=".UnderActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:background="#26AEF1"
            android:layout_width="match_parent"
            android:id="@+id/civil"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Civil"/>

        <Button android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="10dp"                 android:background="#F84EBAF0"

            android:layout_width="match_parent"  android:id="@+id/mechanical" android:text="Mechanical" app:layout_constraintTop_toBottomOf="@+id/civil"/>

        <Button android:layout_height="wrap_content" android:background="#44B8E6"
            android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/electrical" android:text="Electrical and Electronics" app:layout_constraintTop_toBottomOf="@+id/mechanical"/>

        <Button android:layout_height="wrap_content" android:background="#FC40C6E7" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/electronics" android:text="Electronics and Communication" app:layout_constraintTop_toBottomOf="@+id/electrical"/>

        <Button android:layout_height="wrap_content" android:background="#FC39D0DF" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/industrial" android:text="Industrial and Production" app:layout_constraintTop_toBottomOf="@+id/electronics"/>

        <Button android:layout_height="wrap_content" android:background="#F745C9D6" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/instrumentation" android:text="Electronics and Instrumentation" app:layout_constraintTop_toBottomOf="@+id/industrial"/>

        <Button android:layout_height="wrap_content" android:background="#F746D1CC" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/architecture" android:text="Architecture" app:layout_constraintTop_toBottomOf="@+id/instrumentation"/>

        <Button android:layout_height="wrap_content" android:background="#F73EC4BD" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/ceramic" android:text="Ceramic and Cement" app:layout_constraintTop_toBottomOf="@+id/architecture"/>

        <Button android:layout_height="wrap_content" android:background="#4ECFC1" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/information" android:text="Information Science" app:layout_constraintTop_toBottomOf="@+id/ceramic"/>

        <Button android:layout_height="wrap_content" android:background="#E94ED8C9" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/computer" android:text="Computer Science" app:layout_constraintTop_toBottomOf="@+id/information"/>

        <Button android:layout_height="wrap_content" android:background="#E957E4D4"
            android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/automobile" android:text="Automobile" app:layout_constraintTop_toBottomOf="@+id/computer"/>

        <Button android:layout_height="wrap_content"  android:background="#E950DBAB" android:elevation="10dp"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/physics" android:text="Physics" app:layout_constraintTop_toBottomOf="@+id/automobile"/>

        <Button android:layout_height="wrap_content" android:elevation="10dp" android:background="#E956E7B5"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/chemistry" android:text="Chemistry" app:layout_constraintTop_toBottomOf="@+id/physics"/>

        <Button android:layout_height="wrap_content" android:elevation="10dp" android:background="#E95FECBB"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/mathematics" android:text="Mathematics" app:layout_constraintTop_toBottomOf="@+id/chemistry"/>

        <Button android:layout_height="wrap_content" android:elevation="10dp" android:background="#E966EEBF"
            android:layout_margin="10dp" android:layout_width="match_parent" android:id="@+id/humanity" android:text="Humanity" app:layout_constraintTop_toBottomOf="@+id/mathematics"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>