<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE03A9F4"
    tools:context=".CommunicationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Communication System"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/civil"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:src="@drawable/geetahanji"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/civil"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="Geeta Hanji"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/civil"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desi"
        android:textSize="20dp"
        android:layout_marginTop="3dp"
        android:text="Assoc.Professor"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mob"
        android:text="8566778878"
        android:textSize="20dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/desi"
        app:layout_constraintLeft_toRightOf="@+id/image"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/civil"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="25dp"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image1"
        android:src="@drawable/pushapaallad"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name1"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="Pushapa Allad"
        app:layout_constraintLeft_toRightOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desi1"
        android:textSize="20dp"
        android:layout_marginTop="3dp"
        android:text="Assoc.Professor"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintLeft_toRightOf="@+id/image1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mob1"
        android:text="8566778878"
        android:textSize="20dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/desi1"
        app:layout_constraintLeft_toRightOf="@+id/image1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_black_24dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="25dp"/>



</android.support.constraint.ConstraintLayout>