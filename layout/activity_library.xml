<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:id="@+id/my1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Library and Information Center"
                    android:id="@+id/text3"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Vision"
                    android:id="@+id/text7"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="“Serve as One Stop Point for Engineering and allied information access and provide the best possible information services to the user community”.

Hyderabad Karnataka Education Society’s Poojya Doddappa Appa College of Engineering Central Library caters to the academic and research pursuits of students, research scholars and teaching faculty in meeting their varied information needs with its rich print and online sources."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Mission"
                    android:id="@+id/text9"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="The mission of Central Library aims
"
                    android:id="@+id/text10"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="o   Develop and acquire need based engineering and allied Information sources both print and non-print to cater to the academic and research pursuit of users.

o   Develop user-centered culture in designing and developing information services.

o   Integrate latest Technology in Library activities and services to enhance the efficiency of information services and usability.

o   Develop User Instructional Programmes to extend information literacy competencies and life-long learning skills.

o   Leadership and Marketing of information services to attract the users and

o   Adopting evaluative tools at regular intervals for improving the efficiency of user services."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text10" />



                <TextView
                    android:id="@+id/text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="  The central Library is a information hub of academic community and a centre of unbridled intellectual inquiry excellent library facilities to cater to the needs of Curriculum, research, consulting and general reading. The building is spacious with large reading halls. Digital library established to support CD/DVD resources and e-books. It has access to online journals through VTU e-Consortium and the publishers e-resources can be accessed and downloaded i.e. IEL Online, ASCE, ASME, Springer link, Elsevier Science Direct, Taylor and Francis, ProQuest Engg. and Technology, Kopykitab E-books and Sententia: an assistive tool for formal writing)and active member of DELNET."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text12"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Focus"
                    android:id="@+id/text13"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text=" The mission of the central library is to provide information service and access to bibliographic in order to support the institute march towards its vision. It strives to provide information to faculty and students so as to meet their expectations. It has barcode reading facility and well equipped with modem facilities such as Micro Film Reader, Audio Visual Video Cassettes. A separate facility for access of E-Journals is also available in the library. Under VTU e-consortia, the faculty and students are able to access about 10000 online journals. Through DELNET the students can access the Library facilities of many reputed organizations,it has 85000 collections of books. The new library building is built with funds provided under TEQIP and modernized Digital Library equipped with high-speed internet and computers to access e-resources. It is completely automated and has the right environment for the students to read and gain information."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text13" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Infrastructure"
                    android:id="@+id/text16"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text=" Central library is spread out in 1858 sq. mitres housed in a 3 storied building and this library has nice ambient and aesthetic surrounding. It strives to provide information to faculty and students so as to meet their expectations. It is completely automated using EasyLib software and has the right environment for the students to read and gain Information using barcode technology. A separate facility for access of E-Journals is also available in the library. Under VTU Consortia, the faculty and students are able to access about 10,000+ online journals. Through DELNET the students can access the Library facilities of many reputed organizations. Dedicated Digital Library comprising of 40 computers facilitate access to e-resources and to promote its usage, regular user training programmes are conducted to the users."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/malik"
                    android:id="@+id/img1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text17"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/img1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Dr. Mallikarjun Waddankeri, M.Lib, Ph.D.
Chief Librarian."
                    android:id="@+id/text18"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="The library of PDA College of Engineering is named as 'Library and Information Center'.

The libray has 85,000 volumes, reference journals, many periodicals for students and faculty reference.

The libray also has Digital library equipped with highspeed internet leased line and state-of-art computer systems to access digital repositories.

Library has access to IEEE and other important high index journals for reference. Library is housed in a building having good ambience.

Library is completely computerized for rendering efficient services."
                    android:textColor="#F71B39EB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/text19"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text=" Mission:"
                    android:id="@+id/text20"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/l1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text20" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="145dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/l2"
                    app:layout_constraintLeft_toRightOf="@+id/img6"

                    app:layout_constraintTop_toBottomOf="@+id/text20" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/img7"
                    app:layout_constraintTop_toBottomOf="@+id/img6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/l3"/>



            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>






    </android.support.constraint.ConstraintLayout>



</ScrollView>